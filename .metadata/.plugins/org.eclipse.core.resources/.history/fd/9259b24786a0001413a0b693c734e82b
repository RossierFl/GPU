HeatTransfert* HeatTransfertProvider::create()
    {
    //float dt = 2*PI/1000;
    float dt = 1;
    int dw =800; // =32*30=960
    int dh = 800; // =32*30=960
    float k = 0.25;

    return new HeatTransfert(dw, dh, dt,k);
    }

 Image* HeatTransfertProvider::createGL(void)
     {
     return new Image(create());
     }

