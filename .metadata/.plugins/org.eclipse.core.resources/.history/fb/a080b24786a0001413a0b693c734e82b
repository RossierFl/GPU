HeatTransfert* HeatTransfertProvider::create()
    {
    float dt = 2*PI/1000;

    int dw = 16 * 60; // =32*30=960
    int dh = 16 * 60; // =32*30=960

    return new HeatTransfert(dw, dh, dt,1);
    }

 Image* HeatTransfertProvider::createGL(void)
     {
     return new Image(create());
     }

